{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "declaration": true,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
